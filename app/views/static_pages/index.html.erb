<section class="projectoapp">
  <header class="header">
    <h1>Projects</h1>
  </header>

  <section class="main">
    <ul class="project-list">

    </ul>
  </section>
</section>

<script>
  $(function() {
    $.get("/tasks").success(function(data) {
      var htmlString = "";

      $.each(data, function(index, task) {
        var liElement = '<li><div class="view"><input class="toggle" type="checkbox"><label>' + task.title + '</label></div></li>';
        htmlString += liElement;
      });
      var ulProjects = $('.project-list');
      ulProjects.html(htmlString);
    });
  });
</script>  